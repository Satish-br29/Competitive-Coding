class Solution {
    public int threeSumClosest(int[] nums, int target) {
        Arrays.sort(nums);

        int Closest_sum = nums[0] + nums[1] + nums[2];   //after sorting best minimum initially

        for(int i = 0; i < nums.length-2; i++){

            int left = i+1;   //next element after i
            int right = nums.length-1;   //last element
           
            while(left < right){

                int sum = nums[i] + nums[left] + nums[right];  //triplet sum

                //check both side distance from target to curr_sum and closest_sum
                if(Math.abs(target - sum) < Math.abs(target - Closest_sum)){
                    Closest_sum = sum;  //if minm found then update closest sum 
                }
                
                if(sum == target){
                    return sum;  //best close if equal
                }
                else if(sum < target){
                    left++;  
                }
                else{
                    right--;
                }
            }
        }
        return Closest_sum;
    }
}
