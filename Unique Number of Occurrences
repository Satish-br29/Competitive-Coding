class Solution {
    public boolean uniqueOccurrences(int[] arr) {
        // count frequency of each element from original array
        HashMap<Integer, Integer> map = new HashMap<>();
        for (int val : arr) {
            map.put(val, map.getOrDefault(val, 0) + 1);
        }

        // count frequency of frequencies from above map
        HashMap<Integer, Integer> countUni = new HashMap<>();
        for (int freq : map.values()) {
            countUni.put(freq, countUni.getOrDefault(freq, 0) + 1);
        }

        // check if any frequency repeats from countUni HashMap
        for (int val : countUni.values()) {
            if (val > 1) {
                return false;
            }
        }

        return true;
    }
}
